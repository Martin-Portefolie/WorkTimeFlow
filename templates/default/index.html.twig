{% extends 'base.html.twig' %}

{% block title %}{{ 'default_page.meta.title'|trans }}{% endblock %}

{% block body %}
    <section class="relative overflow-hidden">
        <div class="absolute inset-0 -z-10 bg-gradient-to-b from-emerald-50 via-white to-white"></div>

        <div class="container-landing pt-16 pb-10 lg:pt-24">
            <div class="text-center max-w-4xl mx-auto">
                <div class="pill pill-emerald mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"><path d="M12.5 18.5v-7H16l-.5 3h-8l-.5-3h3.5v7"/><path d="M11.5 18.5h-4l-3-3.25V9l7-4.5m0 14h4l3-3.25V9l-7-4.5m0-4v2m11 9h-2m.25-8.25L19 5m1.75 15.25L19 18.5m-18.5-7h2m-.25-8.25L4 5M2.25 20.25L4 18.5m4.5 0v2h3m3-2v2h-3m-2 0v2h2m2-2v2h-2m0 1v-1"/></g></svg>
                    {{ 'default_page.hero.pill'|trans }}
                </div>

                <h1 class="hero-title mb-4">{{ 'default_page.hero.title'|trans }}</h1>
                <p class="hero-sub">
                    {{ 'default_page.hero.subtitle'|trans }}
                </p>
            </div>

            <div class="relative mt-12 mb-10 max-w-4xl mx-auto">
                <div class="card-soft" data-controller="default-page--video">
                    <div class="aspect-video rounded-xl relative overflow-hidden bg-gradient-to-br from-emerald-600 to-teal-700">

                        {# Video is hidden until play #}
                        <video
                                data-default-page--video-target="video"
                                class="absolute inset-0 w-full h-full object-cover rounded-xl hidden"
                                preload="metadata"
                                controls
                        >
                            <source src="{{ asset('movie/movie.mp4') }}" type="video/mp4">
                            {{ 'default_page.video.fallback'|trans }}
                        </video>

                        {# Overlay (gradient background stays visible until play) #}
                        <button
                                data-default-page--video-target="overlay"
                                data-action="click->default-page--video#play"
                                class="absolute inset-0 flex flex-col items-center justify-center bg-black/40 text-white z-10"
                        >
                            <div class="w-24 h-24 bg-white/20 rounded-full flex items-center justify-center mb-4 backdrop-blur-sm">
                                <svg class="h-12 w-12 ml-1" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-semibold">{{ 'default_page.video.title'|trans }}</h3>
                            <p class="text-white/80">{{ 'default_page.video.subtitle'|trans }}</p>
                        </button>
                    </div>
                </div>
            </div>


            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/admin" class="cta-primary">
                    {{ 'default_page.cta.admin'|trans }}
                    <svg class="h-5 w-5 ml-2" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m-7-7l7 7-7 7"/></svg>
                </a>
                <a href="/profile" class="cta-secondary">
                    {{ 'default_page.cta.user'|trans }}
                    <svg class="h-5 w-5 ml-2" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m-7-7l7 7-7 7"/></svg>
                </a>
            </div>
        </div>
    </section>

    <section class="py-20 bg-white">
        <div class="container-landing">
            <div class="text-center mb-12">
                <h2 class="text-3xl lg:text-4xl font-bold mb-3">{{ 'default_page.features.title'|trans }}</h2>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto">{{ 'default_page.features.subtitle'|trans }}</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="feature group">
                    <div class="feature-icon">
                        <svg class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M8 9l3 3-3 3M13 15h3M4 6h16v12H4z"/></svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">{{ 'default_page.features.items.command.title'|trans }}</h3>
                    <p class="text-slate-600">{{ 'default_page.features.items.command.desc'|trans }}</p>
                </div>

                <div class="feature group">
                    <div class="feature-icon">
                        <svg class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M12 8v5l3 3M21 12A9 9 0 1 1 3 12a9 9 0 0 1 18 0z"/></svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">{{ 'default_page.features.items.time.title'|trans }}</h3>
                    <p class="text-slate-600">{{ 'default_page.features.items.time.desc'|trans }}</p>
                </div>

                <div class="feature group">
                    <div class="feature-icon">
                        <svg class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M17 21v-2a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v2M13 7a4 4 0 1 1-8 0 4 4 0 0 1 8 0M21 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">{{ 'default_page.features.items.team.title'|trans }}</h3>
                    <p class="text-slate-600">{{ 'default_page.features.items.team.desc'|trans }}</p>
                </div>

                <div class="feature group">
                    <div class="feature-icon">
                        <svg class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M3 3v18h18M7 13v5M11 9v9M15 11v7M19 6v12"/></svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">{{ 'default_page.features.items.analytics.title'|trans }}</h3>
                    <p class="text-slate-600">{{ 'default_page.features.items.analytics.desc'|trans }}</p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-20">
        <div class="container-landing">
            <div class="text-center mb-12">
                <h2 class="text-3xl lg:text-4xl font-bold mb-3">{{ 'default_page.commands.title'|trans }}</h2>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto">{{ 'default_page.commands.subtitle'|trans }}</p>
            </div>

            <div class="max-w-4xl mx-auto card p-6 sm:p-8">
                <div class="space-y-6">
                    {# Example 1 #}
                    <div class="space-y-2">
                        <div class="terminal-line terminal-cmd">
                            <svg class="h-5 w-5 text-emerald-400" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M8 9l3 3-3 3M13 15h3M4 6h16v12H4z"/></svg>
                            <span class="terminal-mark">$</span>
                            <span class="terminal-text">add client "Hest Test Calendar APS"</span>
                        </div>
                        <div class="terminal-line terminal-res">
                            <svg class="h-5 w-5 text-emerald-600" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                            <span class="text-emerald-800 font-medium">
              {{ 'default_page.commands.responses.client_created'|trans({'%client%':'Hest Test Calendar APS'}) }}
            </span>
                        </div>
                    </div>

                    {# Example 2 #}
                    <div class="space-y-2">
                        <div class="terminal-line terminal-cmd">
                            <svg class="h-5 w-5 text-emerald-400" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M8 9l3 3-3 3M13 15h3M4 6h16v12H4z"/></svg>
                            <span class="terminal-mark">$</span>
                            <span class="terminal-text">add project "Redesign Website" for client "Hest Test Calendar APS"</span>
                        </div>
                        <div class="terminal-line terminal-res">
                            <svg class="h-5 w-5 text-emerald-600" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                            <span class="text-emerald-800 font-medium">
              {{ 'default_page.commands.responses.project_added'|trans({'%project%':'Redesign Website','%client%':'Hest Test Calendar APS'}) }}
            </span>
                        </div>
                    </div>

                    {# Example 3 #}
                    <div class="space-y-2">
                        <div class="terminal-line terminal-cmd">
                            <svg class="h-5 w-5 text-emerald-400" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M8 9l3 3-3 3M13 15h3M4 6h16v12H4z"/></svg>
                            <span class="terminal-mark">$</span>
                            <span class="terminal-text">add todo "Find a new name" for website to Redesign Website</span>
                        </div>
                        <div class="terminal-line terminal-res">
                            <svg class="h-5 w-5 text-emerald-600" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                            <span class="text-emerald-800 font-medium">
              {{ 'default_page.commands.responses.todo_added'|trans({'%todo%':'Find a new name','%project%':'Redesign Website'}) }}
            </span>
                        </div>
                    </div>

                    {# Example 4 #}
                    <div class="space-y-2">
                        <div class="terminal-line terminal-cmd">
                            <svg class="h-5 w-5 text-emerald-400" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M8 9l3 3-3 3M13 15h3M4 6h16v12H4z"/></svg>
                            <span class="terminal-mark">$</span>
                            <span class="terminal-text">add time 2h to todo "Find a new name" 26/08</span>
                        </div>
                        <div class="terminal-line terminal-res">
                            <svg class="h-5 w-5 text-emerald-600" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                            <span class="text-emerald-800 font-medium">
              {{ 'default_page.commands.responses.time_logged'|trans({'%hours%':'2','%todo%':'Find a new name','%date%':'26/08'}) }}
            </span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
