        <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 items-center gap-12">
            <div>
                <p class="text-blue-500 uppercase text-sm font-semibold">11 Febuar 2025</p>
                <h2 class="text-2xl font-bold"> Developer nyheder </h2>
                <ul class="mt-4 space-y-2 text-neutral-700">
                    <li>✅ Der arbejdes på ny forside</li>
                    <li>✅ Nyt kalender registreings system</li>
                    <li>✅ Nyt admin  system</li>
                </ul>
            </div>
            <div>
                <img src="{{ asset('images/demo.jpg') }}" alt="CRM Visualization" class="w-full rounded-lg shadow-lg">
            </div>
        </div>
    </section>

    <!-- Floating Login Button -->
    <div class="fixed bottom-5 left-6">
        <a href="#" class="bg-green-500 p-4 rounded-full shadow-lg text-white text-xl">Login</a>
    </div>

    <!-- Footer Section -->
    <footer class="bg-secondary text-white text-center py-12 px-6 ">
