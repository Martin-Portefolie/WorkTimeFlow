{% extends 'base.html.twig' %}

{% block title %}Tidsregistrering{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto p-6">



{{ dump(users) }}
{{ dump(projects) }}



        <!-- Monthly Calendar -->
        <div class="bg-white shadow-md rounded-lg p-6">
            <h3 class="text-xl font-bold mb-4"> Todo Overview {{ (year ~ '-' ~ month ~ '-01')|date("F") }} {{ year }}</h3>
            <!-- Week Navigation -->
            <div class="flex justify-between items-center mb-6">
                <div class="flex items-center gap-2">
                    <a href="{{ path('app_profile', { 'year': month == 1 ? year - 1 : year, 'month': month == 1 ? 12 : month - 1 }) }}"
                       class="py-2 px-4 bg-gray-200 text-black rounded-md hover:bg-gray-300">Previous week</a>
                    <a href="{{ path('app_profile') }}" class="py-2 px-4 bg-alternate text-white rounded-md hover:bg-indigo-700"> Today</a>
                    <a href="{{ path('app_profile', { 'year': month == 12 ? year + 1 : year, 'month': month == 12 ? 1 : month + 1 }) }}"
                       class="py-2 px-4 bg-gray-200 text-black rounded-md hover:bg-gray-300">Next week</a>
                </div>
            </div>
            <div class="grid grid-cols-7 gap-2">
                {% for day in monthlyData %}
                    <div class="p-4 border rounded-lg bg-background text-center">
                        {{ day.date|date('d ') }}
                        <br>

                        {% for todo in day.todo %}
                            <p>{{ todo.title }}</p>
                        {% else %}
                            <p class="text-gray-400">n/a</p>
                        {% endfor %}
                    </div>

                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
