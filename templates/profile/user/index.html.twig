{% extends 'base.html.twig' %}

<!-- #TODO Re establish a uniform form style -->
{% block body %}
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-2xl shadow-lg mt-12">
        <h2 class="text-3xl font-display font-bold text-neutral-900 mb-6 ">Edit Profile</h2>

        {% for message in app.flashes('success') %}
            <div class="mb-4 p-3 bg-success/20 text-success font-medium rounded-lg text-center">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, { 'attr': {'class': 'space-y-6'} }) }}

        <div>
            {{ form_label(form.username, 'Username', { 'class': 'block text-lg font-medium text-neutral-900 mb-2' }) }}
            {{ form_widget(form.username, { 'attr': {'class': 'w-full p-3 border border-neutral-300 rounded-lg focus:ring focus:ring-primary/40 focus:border-primary'} }) }}
        </div>

        <div>
            {{ form_label(form.email, 'Email', { 'class': 'block text-lg font-medium text-neutral-900 mb-2' }) }}
            {{ form_widget(form.email, { 'attr': {'class': 'w-full p-3 border border-neutral-300 rounded-lg focus:ring focus:ring-primary/40 focus:border-primary'} }) }}
        </div>

        <div>
            {{ form_label(form.plainPassword, 'New Password (Optional)', { 'class': 'block text-lg font-medium text-neutral-900 mb-2' }) }}
            {{ form_widget(form.plainPassword, { 'attr': {'class': 'w-full p-3 border border-neutral-300 rounded-lg focus:ring focus:ring-primary/40 focus:border-primary'} }) }}
            <p class="text-sm text-neutral-500 mt-1">Leave blank if you don't want to change your password.</p>
        </div>

        <div class="flex justify-between items-center">

        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
