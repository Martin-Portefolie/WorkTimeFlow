{% extends 'base.html.twig' %}

{% block body %}
    <section class="relative bg-section_1 py-10 min-h-screen">
        <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
            <h1 class="text-2xl font-semibold text-dark mb-6">
                {{ 'profile.edit.title'|trans }}
            </h1>
            <div class="bg-white p-6 rounded-lg shadow-md">
            <turbo-frame id="profile_form">
                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300">
                    <!-- Success Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="mb-4 p-3 bg-success/20 text-success font-medium rounded-lg text-center">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <!-- Edit Profile Form -->
                    {{ form_start(form, { 'attr': {'class': 'space-y-6'} }) }}

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Username -->
                        <div>
                            {{ form_label(form.username, null, { 'attr': {'class': 'block text-sm font-medium text-dark'} }) }}
                            {{ form_widget(form.username, { 'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-indigo-300'} }) }}
                        </div>

                        <!-- Email -->
                        <div>
                            {{ form_label(form.email, null, { 'attr': {'class': 'block text-sm font-medium text-dark'} }) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-indigo-300'} }) }}
                        </div>
                    </div>

                    <!-- Password (Optional) -->
                    <div>
                        {{ form_label(form.plainPassword, null, { 'attr': {'class': 'block text-sm font-medium text-dark'} }) }}
                        {{ form_widget(form.plainPassword, { 'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-indigo-300'} }) }}
                        <p class="text-sm text-neutral-500 mt-1">
                            {{ 'profile.edit.password_hint'|trans }}
                        </p>
                    </div>



                    {{ form_end(form) }}
                </div>
            </turbo-frame>
            </div>
        </div>
    </section>
{% endblock %}
