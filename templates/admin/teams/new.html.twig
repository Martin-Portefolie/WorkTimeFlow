{% extends 'base.html.twig' %}

{% block title %}{{ 'team_management.new.title'|trans }}{% endblock %}

{% block body %}
    <section class="relative bg-background py-10">
        <div class="w-full max-w-4xl mx-auto px-6 lg:px-8 overflow-hidden">
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-2xl  text-dark">{{ 'team_management.new.title'|trans }}</h1>
            </div>

            {{ form_start(form) }}
            <div class="bg-section_1 p-6 rounded-lg shadow-lg space-y-6 border border-gray-200">

                <!-- Team Name Input -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">
                       {{  'team_management.new.name'|trans  }}
                    </label>
                    {{ form_widget(form.name, {
                        'attr': { 'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-gray-900' }
                    }) }}
                </div>

                <!-- User Selection (Checkboxes) -->
                <div class="p-4 bg-select border border-gray-300 rounded-lg">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        {{  'team_management.new.asign_users'|trans  }}
                    </label>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {% for choice in form.users %}
                            <div class="flex items-center space-x-2">
                                {{ form_widget(choice, { 'attr': { 'class': 'h-5 w-5 text-indigo-600 focus:ring-indigo-500 rounded-md' } }) }}
                                <label class="text-sm text-gray-800">{{ choice.vars.label }}</label>
                            </div>
                        {% endfor %}
                    </div>
                    <p class="text-xs text-gray-500 mt-2">{{ 'team_management.new.explanation_users'|trans }}</p>
                </div>

                <!-- Project Selection (Checkboxes) -->
                <div class="p-4 bg-select border border-gray-300 rounded-lg">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        {{  'team_management.new.projects'|trans  }}
                    </label>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {% for choice in form.projects %}
                            <div class="flex items-center space-x-2">
                                {{ form_widget(choice, { 'attr': { 'class': 'h-5 w-5 text-indigo-600 focus:ring-indigo-500 rounded-md' } }) }}
                                <label class="text-sm text-gray-800">{{ choice.vars.label }}</label>
                            </div>
                        {% endfor %}
                    </div>
                    <p class="text-xs text-gray-500 mt-2">{{ 'team_management.new.explanation_projects'|trans }}</p>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button type="submit"
                            class="py-2 px-6 border border-transparent shadow-md text-sm  rounded-lg text-white bg-new hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        {{ 'team_management.new.submit'|trans }}
                    </button>
                </div>

            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
