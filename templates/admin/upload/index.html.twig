{% extends 'base.html.twig' %}

{% block title %}{{ 'upload_management.index.title'|trans }}{% endblock %}

{% block body %}
    <section class="relative bg-section_2 py-10 min-h-screen">
        <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
            <h1 class="text-2xl font-semibold text-dark mb-6">
                {{ 'upload_management.index.title'|trans }}
            </h1>
            <div class="bg-white p-6 rounded-lg shadow-md">
            <turbo-frame id="upload_form">
                <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300">
                    <!-- Upload Forms Section -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Upload Clients -->
                        <form action="{{ path('admin_upload_clients') }}" method="post" enctype="multipart/form-data" class="space-y-3">
                            <h2 class="text-lg font-semibold">{{ 'upload_management.index.upload_clients'|trans }}</h2>
                            <input type="file" name="client_docx" class="block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-indigo-300">
                            <button type="submit" class="px-4 py-2 text-white bg-save hover:bg-primary rounded-md">
                                {{ 'upload_management.index.upload'|trans }}
                            </button>
                        </form>

                        <!-- Upload Projects -->
                        <form action="{{ path('admin_upload_projects') }}" method="post" enctype="multipart/form-data" class="space-y-3">
                            <h2 class="text-lg font-semibold">{{ 'upload_management.index.upload_projects'|trans }}</h2>
                            <input type="file" name="project_docx" class="block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-indigo-300">
                            <button type="submit" class="px-4 py-2 text-white bg-save hover:bg-primary rounded-md">
                                {{ 'upload_management.index.upload'|trans }}
                            </button>
                        </form>

                        <!-- Upload Todos -->
                        <form action="{{ path('admin_upload_todos') }}" method="post" enctype="multipart/form-data" class="space-y-3">
                            <h2 class="text-lg font-semibold">{{ 'upload_management.index.upload_todos'|trans }}</h2>
                            <input type="file" name="todo_docx" class="block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-indigo-300">
                            <button type="submit" class="px-4 py-2 text-white bg-save hover:bg-primary rounded-md">
                                {{ 'upload_management.index.upload'|trans }}
                            </button>
                        </form>
                    </div>

                    <!-- Flash Messages -->
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="mt-4 px-4 py-3 rounded-md text-sm font-medium
                                        {% if label == 'success' %}
                                            bg-green-100 border border-green-400 text-green-700
                                        {% else %}
                                            bg-red-100 border border-red-400 text-red-700
                                        {% endif %}">
                                <strong class="font-bold">{{ label|capitalize }}!</strong>
                                <span class="block">{{ message }}</span>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </turbo-frame>
            </div>
        </div>
    </section>
{% endblock %}
